<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="390dp"
    android:layout_height="844dp"
    android:background="@color/Blue"
    android:orientation="vertical"
    tools:context=".AddChild">

    <ImageView
        android:layout_width="121.74dp"
        android:layout_height="102.97dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="134dp"

        android:layout_marginTop="44dp"
        android:src="@drawable/addchild" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="302dp"
        android:layout_height="89dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="218dp"
android:text="Please enter the required information to complete your childâ€™s profile"        android:textSize="22dp"
        android:lineHeight="35sp"
        android:textAlignment="center"

        android:textColor="@color/white"
        android:fontFamily="@font/poppins_regular"/>
    <EditText
        android:id="@+id/firstname"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:fontFamily="@font/abel_regular"

        android:textSize="14dp"
        android:lineHeight="20sp"
        android:layout_marginTop="387dp"
        android:inputType="text"
        android:hint="First name"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:layout_marginLeft="40dp"

        android:background="@drawable/bg_button_white"/>

    <EditText
        android:id="@+id/lastname"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:fontFamily="@font/abel_regular"

        android:textSize="14dp"
        android:lineHeight="20sp"
        android:layout_marginTop="460dp"
        android:inputType="text"
        android:hint="Last name"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:layout_marginLeft="40dp"

        android:background="@drawable/bg_button_white"/>

    <EditText
        android:id="@+id/gender"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:fontFamily="@font/abel_regular"

        android:textSize="14dp"
        android:lineHeight="20sp"
        android:layout_marginTop="533dp"
        android:inputType="text"
        android:hint="Gender"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:layout_marginLeft="40dp"

        android:background="@drawable/bg_button_white"/>

    <EditText
        android:id="@+id/birth"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:fontFamily="@font/abel_regular"

        android:textSize="14dp"
        android:lineHeight="20sp"
        android:layout_marginTop="606dp"
        android:inputType="text"
        android:hint="Birth date"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:layout_marginLeft="40dp"

        android:background="@drawable/bg_button_white"/>
    <Button
        android:id="@+id/skip"
        android:layout_width="105dp"
        android:layout_height="50dp"
        android:layout_marginTop="689dp"
        android:layout_marginLeft="64dp"
        android:background="@drawable/bg_button_white"
        android:text="Skip "


        android:textColor="@color/BlueText"
        ></Button>
    <Button
        android:id="@+id/next"
        android:layout_width="105dp"
        android:layout_height="50dp"
        android:layout_marginTop="689dp"
        android:layout_marginLeft="218dp"
        android:background="@drawable/bg_button_white"
        android:text="Next "
        android:drawableEnd="@drawable/chevron"

        android:textColor="@color/BlueText"
        ></Button>

</RelativeLayout>