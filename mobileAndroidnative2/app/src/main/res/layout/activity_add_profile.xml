<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="390dp"
    android:layout_height="844dp"
    android:background="@color/Blue"
    android:orientation="vertical"
    tools:context=".AddProfile">


    <ImageView
        android:layout_width="134dp"
        android:layout_height="112dp"
        android:src="@drawable/addprofile"
        android:layout_marginLeft="128dp"

        android:layout_marginTop="42dp"

        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="264dp"
        android:layout_height="89dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="218dp"
        android:text="Please enter your childâ€™s social media account information "
        android:textSize="22dp"
        android:lineHeight="35sp"

        android:textColor="@color/white"
        android:fontFamily="@font/abel_regular"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="346dp"
        android:layout_height="30dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="295dp"
        android:text="This information will help us to protect your child from online abusive content and cyberharassment"
        android:textSize="16dp"
        android:lineHeight="15sp"

        android:textColor="@color/white"
        android:fontFamily="@font/abel_regular"/>
    <EditText
        android:id="@+id/socialname"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:fontFamily="@font/abel_regular"

        android:textSize="14dp"
        android:lineHeight="20sp"
        android:layout_marginTop="371dp"
        android:inputType="text"
        android:hint="Social network platform (Drop down)"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:layout_marginLeft="40dp"

        android:background="@drawable/bg_button_white"/>

    <EditText
        android:id="@+id/socialnetwork"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:fontFamily="@font/abel_regular"

        android:textSize="14dp"
        android:lineHeight="20sp"
        android:layout_marginTop="460dp"
        android:inputType="text"
        android:hint="Social network user name"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:layout_marginLeft="40dp"

        android:background="@drawable/bg_button_white"/>

    <EditText
        android:id="@+id/socialnetwork3"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:fontFamily="@font/abel_regular"

        android:textSize="14dp"
        android:lineHeight="20sp"
        android:layout_marginTop="533dp"
        android:inputType="text"
        android:hint="Social network page URL"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:layout_marginLeft="40dp"

        android:background="@drawable/bg_button_white"/>

    <Button
        android:id="@+id/skip"
        android:layout_width="105dp"
        android:layout_height="50dp"
        android:layout_marginTop="616dp"
        android:layout_marginLeft="59dp"
        android:background="@drawable/bg_button_white"
        android:text="Skip "


        android:textColor="@color/BlueText"
        ></Button>
    <Button
        android:id="@+id/next"
        android:layout_width="105dp"
        android:layout_height="50dp"
        android:layout_marginTop="616dp"
        android:layout_marginLeft="215dp"
        android:background="@drawable/bg_button_white"
        android:text="Next "
        android:drawableEnd="@drawable/chevron"

        android:textColor="@color/BlueText"
        ></Button>
</RelativeLayout>