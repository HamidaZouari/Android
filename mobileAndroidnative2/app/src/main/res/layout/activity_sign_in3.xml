<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:orientation="vertical"
    android:background="@color/Blue"
    android:layout_width="390dp"
    android:layout_height="844dp"
    tools:context=".Sign_in3">
    <ImageView
        android:id="@+id/iconImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="154dp"
        android:layout_marginTop="57dp"
        android:src="@drawable/microdoftteams" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="240dp"
        android:layout_height="89dp"
        android:layout_marginLeft="54dp"
        android:layout_marginTop="205dp"
        android:text="Welcome to 4In Shield!\n
Sign in to continue"
        android:textColor="@color/white"
        android:fontFamily="@font/abel_regular"/>

    <EditText
        android:id="@+id/username"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:ems="10"
        android:layout_marginTop="348dp"
        android:inputType="text"
        android:hint="Username"
        android:textColor="#3C000000"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:layout_marginLeft="40dp"

        android:background="@drawable/bg_button_white"/>


    <EditText
        android:id="@+id/email"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:ems="10"
        android:layout_marginTop="422dp"
        android:inputType="text"
        android:hint="Password"
        android:layout_marginLeft="40dp"

        android:textColor="#3C000000"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"

        android:background="@drawable/bg_button_white"/>

    <EditText
        android:id="@+id/pwd"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:ems="10"
        android:layout_marginTop="496dp"
        android:inputType="text"
        android:hint="Password"
        android:layout_marginLeft="40dp"

        android:textColor="#3C000000"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"

        android:background="@drawable/bg_button_white"/>
    <EditText
        android:id="@+id/confirmpw"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:ems="10"
        android:layout_marginTop="570dp"
        android:inputType="text"
        android:hint="Confirm Password"
        android:layout_marginLeft="40dp"

        android:textColor="#3C000000"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"

        android:background="@drawable/bg_button_white"/>


    <TextView
        android:id="@+id/signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="73dp"
        android:layout_marginTop="648dp"
        android:clickable="true"
        android:fontFamily="@font/abel_regular"
        android:onClick="onTextViewClick"
        android:text="I herby accept terms and conditions"
        android:textColor="@color/white"
        android:textSize="14dp" />
    <View
        android:layout_width="110dp"
        android:layout_marginTop="670dp"

        android:layout_height="2dp"
        android:background="@color/white"
        android:layout_marginLeft="160dp"/>
    <Button
        android:id="@+id/signupB"
        android:layout_width="111dp"
        android:layout_height="50dp"
        android:layout_marginTop="697dp"
        android:layout_marginLeft="142dp"
        android:background="@drawable/bg_button_white"
        android:text="Sign in "
        android:drawableEnd="@drawable/chevron"

        android:textColor="@color/BlueText"
        ></Button>

</RelativeLayout>